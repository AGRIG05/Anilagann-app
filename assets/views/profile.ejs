  <div class="container align-items-center" style="margin-top: 80px;">
    <div id="profileMain" class="mt-5">
      <div class="m-3">
      <ul class="nav nav-pills justify-content-center" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active text-white" id="watching-tab" data-bs-toggle="tab" data-bs-target="#watching" type="button" role="tab" aria-controls="watching" aria-selected="true">Смотрю [<%= watching.length %>]</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link text-white" id="abandoned-tab" data-bs-toggle="tab" data-bs-target="#abandoned" type="button" role="tab" aria-controls="abandoned" aria-selected="false">Брошено [<%= abandoned.length %>]</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link text-white" id="plan-tab" data-bs-toggle="tab" data-bs-target="#plan" type="button" role="tab" aria-controls="plan" aria-selected="false">В планах [<%= plan.length %>]</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link text-white" id="viewed-tab" data-bs-toggle="tab" data-bs-target="#viewed" type="button" role="tab" aria-controls="viewed" aria-selected="false">Просмотренно [<%= viewed.length %>]</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link text-white" id="favorite-tab" data-bs-toggle="tab" data-bs-target="#favorite" type="button" role="tab" aria-controls="favorite" aria-selected="false">Любимые [<%= favorite.length %>]</button>
        </li>
      </ul>
      
      <!-- Tab panes -->
      <div class="tab-content">
        <div class="tab-pane fade active show text-white" id="watching" role="tabpanel" aria-labelledby="watching-tab" tabindex="0">
          <div class="row row-cols-3 justify-content-center align-items-center w-100 g-2" style="min-height: 436px;" id="cards">
            <% if(watching.length != 0) {%>
              <% watching.forEach(function(anime) { %>
                <div id="card" class="card col m-lg-3 m-md-1 m-sm-1 p-0" style="width: 288px;">
                  <a href="/anime/<%= anime.ids[0] %>">
                  <% if(anime.poster == null){ %>
                    <img id="poster" src="poster" class=" rounded-0" alt="" style="width: 286px; height: 404px">
                  <% }else{ %>
                    <img id="poster" src="<%= anime.poster %>" class=" rounded-0" alt="" style="width: 286px; height: 404px">
                  <% } %>
                  <div class="card-img-overlay" id="cardOverlay">
                    <h4 class="card-text"><%= anime.rating %></h4>
                    <h4 class="card-text"><%= anime.title %></h4>
                    <p class="card-text m-0"><%= anime.epAired %> из <%= anime.epTotal %><br></p>
                    <p class="card-text m-0"><%= anime.genres %><br></p>
                    <p class="card-text m-0"><%= anime.year %><br></p>
                  </div>
                  </a>
                </div>
              <% }); %>
            <% }else {%>
                <h3 class="text-center">Список пуст.</h3>
            <% }%>
          </div>
        </div>
